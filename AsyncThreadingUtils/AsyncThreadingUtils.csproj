<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <LangVersion>12</LangVersion>
        <Nullable>enable</Nullable>
        <RootNamespace>Pustalorc.Libraries.AsyncThreadingUtils</RootNamespace>
        <TargetFrameworks>net481;net6.0;net7.0;net8.0;netstandard2.0;netstandard2.1</TargetFrameworks>
        <Company>Pustalorc</Company>
        <Version>1.1.1</Version>
        <PackageVersion>1.1.1</PackageVersion>
        <AssemblyVersion>1.0.0</AssemblyVersion>
        <FileVersion>1.1.1</FileVersion>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <AssemblyName>Pustalorc.AsyncThreadingUtils</AssemblyName>
        <Product>Pustalorc.AsyncThreadingUtils</Product>
        <PackageId>Pustalorc.AsyncThreadingUtils</PackageId>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <Authors>Pustalorc</Authors>
        <Description>Library that adds a BackgroundWorker and TaskQueue with Async support.</Description>
        <Copyright>Copyright Â© 2022-2024 Pustalorc</Copyright>
        <RepositoryUrl>https://github.com/Pustalorc/AsyncThreadingUtils</RepositoryUrl>
        <RepositoryType>Github</RepositoryType>
        <PackageTags>Async BackgroundWorker Utility Threading</PackageTags>
        <PackageReleaseNotes>Added additional delay settings to alleviate high cpu usage.</PackageReleaseNotes>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="JetBrains.Annotations" Version="2024.2.0" PrivateAssets="all"/>
    </ItemGroup>

</Project>
